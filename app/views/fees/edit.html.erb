<div class="row">
  <div class="span6 offset3">
    <h2>fees and donations</h2>
    <p class="lead">You can change the monthly fee you need to pay and the amount of your monthly donation.</p>
  </div>

  <div class="span4 offset4">
    <p><strong>Name: </strong><%= @fee.name %></p>
  
    <%= bootstrap_form_for(@fee, url: fees_edit_url, method: :put, help: :block) do |f| %>
      <%= f.alert_message "Please fix the errors below." %>
      <%= f.select :fee, [["30€ (full membership)", 30.0], ["8€ (discount membership)", 8.0]], {}, { class: "span4" } %>
      <%= f.text_field :donation, label: "Donation (optional)", class: "span4" %>
      <%= f.submit "Save", { disable_with: "Saving...", class: "btn btn-primary pull-right" } %>
    <% end %>
  </div>
</div>