<div class="row">
  <div class="span6 offset3">
    <h2><%= t :title %></h2>
    <% if @fee %>
      <div class="alert alert-success alert-block">
        <%= t(:confirm_success).html_safe %>
      </div>
    <% else %>
      <div class="alert alert-error alert-block">
        <%= t(:confirm_error).html_safe %>
      </div>
    <% end %>
  </div>
</div>
